<?xml version="1.0" encoding="UTF-8"?>
<!--
Sample OAuth credentials configuration.
Add CCAPICredentialOauth entries to your main CCAPIsCredentials.xml file.
Location: <userhome>/xyz-jphil/ccapis/CCAPIsCredentials.xml

This file shows example OAuth credential configuration based on PRP requirements.
-->
<CCAPIsCredentials>
    <!-- Example OAuth Credential -->
    <CCAPICredentialOauth
        id="LGL"
        name="Legal"
        email="legal@uskfoundation.or.ke"
        clientId="9d1c250a-e61b-44d9-88ed-5944d1962f5e"
        ccapiBaseUrl="%CCAPI_BASE_URL%"
        ccapiConsoleUrl="%CCAPI_CONSOLE_URL%"
        ccapiApiUrl="%CCAPI_API_URL%"
        tier="1"
        active="true"
        trackUsage="true"
        ping="true" />

    <!-- Another example with hardcoded URLs -->
    <CCAPICredentialOauth
        id="DEV"
        name="Development"
        email="dev@example.com"
        clientId="your-client-id-here"
        ccapiBaseUrl="https://console.anthropic.com"
        ccapiConsoleUrl="https://console.anthropic.com"
        ccapiApiUrl="https://api.anthropic.com"
        tier="1"
        active="true"
        trackUsage="false"
        ping="false" />

    <!-- Mixed: You can have both regular and OAuth credentials -->
    <CCAPICredential
        id="SESS01"
        name="Session Based Account"
        email="session@example.com"
        ccapiBaseUrl="%CCAPI_BASE_URL%"
        orgId="org-id-here"
        key="session-key-here"
        tier="1"
        trackUsage="true"
        ping="true" />
</CCAPIsCredentials>
